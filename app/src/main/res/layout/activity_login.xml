<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/php"
            android:layout_marginTop="@dimen/dp_110"
            android:layout_marginLeft="@dimen/dp_0"
            />-->
        <EditText

            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_50"
            android:ems="12"
            android:background="@null"
            android:inputType="number"
            android:hint="手机号:"
            android:drawableLeft="@mipmap/php"
            android:drawablePadding="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            android:textColor="#ddd"
            android:padding="@dimen/dp_20"
            android:textColorHint="#fff"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_40"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/suo"
                android:layout_marginLeft="@dimen/dp_30"
                />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_0"
                android:layout_marginRight="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_15"
                android:password="true"
                android:maxLines="1"
                android:textColor="#ddd"
                android:padding="@dimen/dp_20"
                android:textColorHint="#fff"
                android:hint="密码:"
                />
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/eye"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_0"
                android:id="@+id/eye_id"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_30"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jzma_id"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:text="记住密码"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text="快速注册"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:id="@+id/btn_regist"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:text="登录"
        android:id="@+id/btn_login"
        android:layout_marginTop="@dimen/dp_50"
        android:background="#FB7395"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop= "@dimen/dp_35"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_2"
            android:gravity="center_vertical"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_10"
            android:text="第三方账号快速登录"/>

        <View
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_2"
            android:gravity="center_vertical"
            android:background="#ffffff"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:id="@+id/wxLogin"
            android:src="@mipmap/wei"/>
    </LinearLayout>
</LinearLayout>